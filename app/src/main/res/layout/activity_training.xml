<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="itptitpart3.anony1412.itptit.itptit_part3.training_creature.TrainingActivity">

    <ScrollView
        android:id="@+id/svTraining"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cyan200"
                    android:weightSum="3">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_devC"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icondevc" />

                    <TextView
                        android:id="@+id/txt_devC"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="2"
                        android:text="Khóa đào tạo C/C++ cho các thành viên training diên ra trong vòng 3 tháng. Kết thúc kì training sẽ tổ chức thi tuyển để chọn những cá nhân xuất sắc trở thành thành viên chính thức của clb ITPTIT."
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cyan200"
                    android:weightSum="3">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_android"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/iconandroid" />

                    <TextView
                        android:id="@+id/txt_android"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="2"
                        android:text="Khóa đào tạo Android thuộc chi nhánh Android - ban Ứng dụng. Với mục đích hỗ trợ những thành viên có định hướng theo lập trình Android. "
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cyan200"
                    android:weightSum="3">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_photoshop"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/iconphotoshop" />

                    <TextView
                        android:id="@+id/txt_photoshop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="2"
                        android:text="Khóa đào tạo thuộc chi nhánh Design - ban Ứng dụng. Với mục đích hỗ trợ những thành viên có đam mê thiết kế, chỉnh sửa đồ họa..."
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cyan200"
                    android:weightSum="3">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_game"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/icongame" />

                    <TextView
                        android:id="@+id/txt_game"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="2"
                        android:text="Khóa đào tạo Game thuộc chi nhánh Game - ban Ứng dụng. Với mục đích hỗ trợ những thành viên có niềm đam mê và định hướng theo lập trình game."
                        android:textSize="16sp"
                        android:textStyle="italic" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cyan200"
                    android:weightSum="3">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_web"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/iconwebt" />

                    <TextView
                        android:id="@+id/txt_web"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="2"
                        android:text="Khóa đào tạo Web thuộc chi nhánh Web - ban Ứng dụng. Với mục đích hỗ trợ những thành viên có niềm đam mê và định hướng theo lập trình Web."
                        android:textSize="16sp"
                        android:textStyle="italic" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>