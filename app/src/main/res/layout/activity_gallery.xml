<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/side_nav_bar"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_BirthDay"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:layout_height="0dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/amber200">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icons8_birthday_80"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txt_cardView_BirthDay"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Birthday"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/orange800"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_BigGame"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:layout_height="0dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/amber300">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/biggame80"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txt_cardView_BigGame"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Biggame"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/orange800"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_TuyenThanhVien"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:layout_height="0dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/amber400">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/students"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txt_cardView_TuyenThanhVien"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Tuyển Thành Viên"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/orange800"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_MrAndMrs"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:layout_height="0dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/amber500">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mrandmrs"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txt_cardView_MrAndMrs"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Mr. &amp; Ms."
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/orange800"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_OtherImage"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:layout_height="0dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/amber600">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icons8_albums_100"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txt_cardView_OtherImage"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Other Image"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/orange800"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_AddAlbum"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:layout_height="0dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/gray200">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icons8_add_album_80"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txt_cardView_AddAlbum"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Add Album"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/gray"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>